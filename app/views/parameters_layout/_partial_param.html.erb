<div class="modal fade" id="modalMoreInfoWSDL" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
          &times;
        </button>
        <h4 class="modal-title"><i class="fa fa-info-circle"></i><i id="modalWSDLInfoTitle"></i> </h4>
      </div>
      <div class="modal-body">
        <div id="WSDLMoreInfo" data-spy="scroll"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="modalWSDLFile" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
					&times;
				</button>
				<h4 class="modal-title"><i class="fa fa-file-text-o"></i><i id="modalWSDLFileTitle"></i> </h4>
			</div>
			<div class="modal-body modal-body-editor">
				<div id="editor" id="modalWSDLFileBody"></div>
				<script>
					var editor = ace.edit("editor");
					var XMLMode = require("ace/mode/xml").Mode;
					editor.setTheme("ace/theme/ambiance");
					editor.getSession().setMode(new XMLMode());
					editor.setShowPrintMargin(false);
				</script>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">
					Close
				</button>
			</div>
		</div>
	</div>
</div>
